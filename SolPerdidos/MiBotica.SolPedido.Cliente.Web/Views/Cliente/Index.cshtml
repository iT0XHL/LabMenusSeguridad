@model IEnumerable<MiBotica.SolPedido.Entidades.Core.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Lista de Clientes</h3>
        <div class="box-tools" style="margin-top:10px;">
            @using (Html.BeginForm("Index", "Cliente", FormMethod.Get, new { id = "searchForm", @class = "form-inline", style = "display:flex; gap:10px;" }))
            {
                <input type="number" name="searchCodigo" id="searchCodigo"
                       class="form-control"
                       placeholder="Buscar por Código de Cliente"
                       value="@Request["searchCodigo"]"
                       style="flex:1;" />

                <button type="submit" class="btn btn-default">
                    <i class="fa fa-search"></i> Buscar
                </button>

                <a href="@Url.Action("Index", "Cliente")" class="btn btn-warning">
                    <i class="fa fa-refresh"></i> Ver Todos
                </a>

                <a href="@Url.Action("Create", "Cliente")" class="btn btn-primary">
                    <i class="fa fa-plus"></i> Nuevo Cliente
                </a>
            }
        </div>
    </div>

    <div class="box-body table-responsive no-padding" style="margin-top:15px;">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:80px;">@Html.DisplayNameFor(model => model.FirstOrDefault().Codigo)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NombreCompleto)</th>
                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Zona)</th>
                    <th style="width:260px;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center text-danger">
                            No se encontraron clientes.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Zona)</td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Codigo }, new { @class = "btn btn-sm btn-warning" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.Codigo }, new { @class = "btn btn-sm btn-info" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.Codigo }, new { @class = "btn btn-sm btn-danger" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("searchCodigo").addEventListener("input", function () {
            if (this.value === "") {
                document.getElementById("searchForm").submit();
            }
        });
    </script>
}
